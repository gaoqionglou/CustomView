<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:timeScheduleView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/id_container"
    >
    <com.gaoql.customview.TimeScheduleView
        android:id="@+id/timeScheduleView"
        android:layout_centerInParent="true"
        timeScheduleView:mbackgroundColor="@color/colorAccent"
        timeScheduleView:innerCirlceRadius="50dp"
        timeScheduleView:innerCircleColor="#969696"
        timeScheduleView:outterCircleColor="#eaeaea"
        timeScheduleView:text="飞行中"
        timeScheduleView:textColor="@color/colorPrimary"
        timeScheduleView:textSize="20sp"
        timeScheduleView:outterCirlceRadius="60dp"
        timeScheduleView:outterCirlceWidth="5sp"
        timeScheduleView:progressCircleColor="@color/colorPrimaryDark"
        timeScheduleView:progressCircleWidth="5sp"
        timeScheduleView:progressDrawable="@mipmap/ic_flight"
        timeScheduleView:rippleWidth="20dp"
        timeScheduleView:rippleColor="#FFD700"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <Button
        android:id="@+id/addBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加"
        />
    <Button
        android:id="@+id/minBtn"
        android:layout_below="@+id/addBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="减"
        />

</RelativeLayout>